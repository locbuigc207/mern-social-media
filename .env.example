# ✅ NEW FILE: Copy this to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secrets (⚠️ CHANGE THESE!)
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
ACCESS_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING_32_CHARS
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_YET_ANOTHER_RANDOM_STRING_32_CHARS

# Email Configuration (Gmail)
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# Client URL
CLIENT_URL=http://localhost:3000

# Admin Configuration
SPAM_THRESHOLD=2
DEFAULT_ADMIN_EMAIL=admin@campusconnect.com

# Cloudinary Configuration (REQUIRED)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Configuration (Optional - for production)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_RANDOM_STRING

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# FFmpeg Path (for video processing)
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Features
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_DB_OPTIMIZATION=false
CLEANUP_LONG_QUERIES=false