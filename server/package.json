{
  "name": "mern-social-media",
  "version": "3.0.0",
  "description": "Modern MERN Stack Social Media",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore client/",
    "server": "nodemon server.js --ignore client/",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "both": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "seed": "node scripts/seed.js",
    "cleanup": "node scripts/cleanup.js",
    "db:reset": "node scripts/reset-db.js",
    "logs:clear": "rm -rf logs/*.log",
    "setup": "npm install && mkdir -p logs uploads temp && npm run client-install"
  },
  "keywords": [
    "mern",
    "social-media",
    "stories",
    "group-chat",
    "mongodb",
    "express",
    "react",
    "nodejs",
    "socket.io",
    "cloudinary",
    "image-upload",
    "real-time"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.11",
    "sharp": "^0.33.1",
    "socket.io": "^4.6.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}